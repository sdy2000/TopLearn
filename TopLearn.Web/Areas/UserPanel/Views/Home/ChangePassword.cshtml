@model TopLearn.Core.DTOs.ChangePasswordViewModel
@{
    ViewData["Title"] = "تغیر کلمه عبور";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page"> پنل کاربری </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1>تغیر کلمه عبور</h1></header>
                        <div class=" inner form-layer">
                            <div class="row">
                                <div class="col-md-9 col-sm-8 col-xs-12">
                                    <form asp-action="ChangePassword" method="post">

                                        @if (ViewBag.IsSuccess != null)
                                        {
                                            <div class="alert alert-success">
                                                کلمه عبور شما با موفقیت تغیر کرد
                                            </div>
                                        }


                                        <div class="input-group">
                                            <span class="input-group-addon" id="oldPassword"><i class="zmdi zmdi-lock"></i></span>
                                            <input asp-for="OldPassword" type="password" class="form-control" placeholder="رمز عبور فعلی " aria-describedby="password">
                                        </div>

                                        <div class="input-group">
                                            <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                                            <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور " aria-describedby="password">
                                        </div>

                                        <div class="input-group">
                                            <span class="input-group-addon" id="Repassword"><i class="zmdi zmdi-lock"></i></span>
                                            <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار رمز عبور " aria-describedby="password">
                                        </div>

                                        <div asp-validation-summary="All" class="text-danger"></div>

                                        <button class="btn btn-success"> ثبت تغیرات </button>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>
