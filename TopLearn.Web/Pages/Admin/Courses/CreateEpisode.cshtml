@page "{id}"
@model TopLearn.Web.Pages.Admin.Courses.CreateEpisodeModel
@{
    ViewData["Title"] = "افزودن بخش جدید";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن بخش جدید </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="CourseEpisode.CourseId" />

        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    اطلاعات بخش
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    

                    <div class="form-group">
                        <label>عنوان بخش : </label>
                        <input type="text" asp-for="CourseEpisode.EpisodeTitle" class="form-control">
                        <span asp-validation-for="CourseEpisode.EpisodeTitle" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>زمان بخش : </label>
                        <input type="text" asp-for="CourseEpisode.EpisodeTime" class="form-control">
                        <span asp-validation-for="CourseEpisode.EpisodeTime" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label> فایل بخش : </label>
                        <input type="file" name="fileEpisode">
                        <p class="text-danger"> * فایل اجباری میباشد </p>
                        <span asp-validation-for="CourseEpisode.EpisodFileName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label> دسترسی : </label>
                        <br />
                         <input type="checkbox" asp-for="CourseEpisode.IsFree" /> رایگان است
                    </div>
                    


                    <br />
                    <p>
                        <input type="submit" value="ذخیره اطلاعات" class="btn btn-success btn-outline" />
                    </p>


                </div>
            </div>
        </div>
    </form>
</div>