@page
@model TopLearn.Web.Pages.Admin.Courses.IndexModel

@{
    ViewData["Title"] = "لیست دوره ها";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست دوره ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست دوره های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                        <div class="col-md-12" style="margin:10px">
                                <a href="/Admin/Courses/CreateCourse" class="btn btn-success btn-outline"> افزودن دوره جدید</a>
                        </div>


                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>تصویر دوره</th>
                                    <th>نام دوره</th>
                                    <th>تعداد جلسه</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ListCourse)
                                {
                                    <tr>
                                        <th>
                                            <img src="/Course/thumb/@item.ImageName" class="thumbnail" />
                                        </th>
                                        <th>@item.Title</th>
                                        <th>@item.EpisodeCount</th>
                                        <th>
                                            <a href="/Admin/Courses/EditCourse/@item.CourseId" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>
                                            <a href="/Admin/Courses/DeleteCourse" class="btn btn-danger btn-sm">
                                                حذف
                                            </a>
                                            <a href="/Admin/Courses/IndexEpisode/@item.CourseId" class="btn btn-info btn-sm">
                                                بخش های دوره
                                            </a>
                                        </th>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>