@page "{id}"
@model TopLearn.Web.Pages.Admin.Courses.IndexEpisodeModel
@{
    ViewData["Title"] = "بخش های دوره ";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">بخش های دوره </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست بخش های دوره
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                        <div class="col-md-12" style="margin:10px">
                                <a href="/Admin/Courses/CreateEpisode/@ViewData["CourseId"].ToString()" class="btn btn-success btn-outline"> افزودن بخش جدید</a>
                        </div>


                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>عنوان بخش</th>
                                    <th>زمان جلسه</th>
                                    <th>رایگان</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CourseEpisode)
                                {
                                    <tr>
                                        <th>@item.EpisodeTitle</th>
                                        <th>@item.EpisodeTime</th>
                                        <th>
                                            
                                            @if (item.IsFree)
                                            {
                                                <p class="text-success">رایگان</p>
                                            }
                                            else
                                            {
                                                <p class="text-danger">پولی</p>
                                            }
                                        </th>
                                        <th>
                                            <a href="/Admin/Courses/EditEpisode/@item.EpisodeId" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>
                                            <a href="/Admin/Courses" class="btn btn-danger btn-sm">
                                                حذف
                                            </a>
                                        </th>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>