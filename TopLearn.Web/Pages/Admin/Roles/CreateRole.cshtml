@page
@using TopLearn.DataLayer.Entities.Permissions
@model TopLearn.Web.Pages.Admin.Roles.CreateRoleModel
@{
    ViewData["Title"] = "افزودن نقش جدید";
    List<Permission> permissions = ViewData["Permissions"] as List<Permission>;
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"> افزودن نقش جدید</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post">


        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    نقش
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">

                    <div class="form-group">
                        <label>عنوان نقش : </label>
                        <input type="text" asp-for="Role.RoleTitel" class="form-control">
                        <span asp-validation-for="Role.RoleTitel" class="text-danger"></span>
                    </div>

                    <br />
                    <p>
                        <input type="submit" value="ذخیره اطلاعات" class="btn btn-success btn-outline" />
                    </p>

                </div>
                <!-- /.panel-body -->
            </div>
        </div>

        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    دسترسی های نقش
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <ul>
                        @foreach (var permission in permissions.Where(p => p.ParentId == null))
                        {
                            <li>
                                <input type="checkbox" name="selectedPermission" value="@permission.PermissionId" /> @permission.PermissionTitle

                                @if (permissions.Any(p => p.ParentId == permission.ParentId))
                                {

                                    <ul>
                                        @foreach (var sub1 in permissions.Where(p => p.ParentId == permission.PermissionId))
                                        {
                                            <li>
                                                <input type="checkbox" name="selectedPermission" value="@sub1.PermissionId" /> @sub1.PermissionTitle

                                                @if (permissions.Any(p => p.ParentId == sub1.ParentId))
                                                {

                                                    <ul>
                                                        @foreach (var sub2 in permissions.Where(p => p.ParentId == sub1.PermissionId))
                                                        {
                                                            <li>
                                                                <input type="checkbox" name="selectedPermission" value="@sub2.PermissionId" /> @sub2.PermissionTitle
                                                            </li>
                                                        }
                                                    </ul>

                                                }
                                            </li>
                                        }
                                    </ul>
                                }
                            </li>

                        }
                    </ul>
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </form>
</div>