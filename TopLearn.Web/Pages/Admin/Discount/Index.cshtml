@page
@using TopLearn.Core.Convertors
@model TopLearn.Web.Pages.Admin.Discount.IndexModel
@{
    ViewData["Title"] = "لیست تخفیف ها ";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست تخفیف ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست تخفیف ها
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                        <div class="col-md-12" style="margin:10px">
                                <a href="/Admin/Discount/CreateDiscount" class="btn btn-success btn-outline"> افزودن تخفیف جدید</a>
                        </div>


                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>کد تخفیف</th>
                                    <th>درصد تخفیف</th>
                                    <th>تعداد</th>
                                    <th>تاریخ شروع</th>
                                    <th>تاریخ پایان</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                               
                                @foreach(var code in Model.Descounts)
                                {
                                    <tr>
                                        <th>@code.DescountCode</th>
                                        <th>@code.DescountPercent</th>
                                        <th>@code.UsableCount</th>
                                        <th>@((code.StartDate!=null)?code.StartDate.Value.ToShamsi():"")</th>
                                        <th>@((code.EdnDate!=null)?code.EdnDate.Value.ToShamsi():"")</th>
                                        <th>
                                            
                                            <a href="/Admin/Discount/EditDiscount/@code.DiscountId" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>
                                            <a href="/Admin/Discount/DeleteDiscount/@code.DiscountId" class="btn btn-danger btn-sm">
                                                حذف
                                            </a> 

                                        </th>
                                    </tr>
                                }

                            </tbody>
                        </table>
                       
                    </div>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>