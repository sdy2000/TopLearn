@page "{id?}"
@model TopLearn.Web.Pages.Admin.CourseGroups.CreateGroupModel
@{
    ViewData["Title"] = "افزودن گروه جدید";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"> افزودن گروه جدید</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post">

        <input type="hidden" asp-for="CourseGroup.ParentId" />

        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    گروه
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">

                    <div class="form-group">
                        <label>عنوان گروه : </label>
                        <input type="text" asp-for="CourseGroup.GroupTitle" class="form-control">
                        <span asp-validation-for="CourseGroup.GroupTitle" class="text-danger"></span>
                    </div>

                    <br />
                    <p>
                        <input type="submit" value="ذخیره اطلاعات" class="btn btn-success btn-outline" />
                    </p>

                </div>
                <!-- /.panel-body -->
            </div>
        </div>

    </form>
</div>