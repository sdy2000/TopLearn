@page "{id}"
@model TopLearn.Web.Pages.Admin.Users.DeleteUserModel
@{
    ViewData["Title"] = "حذف کاربر ";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"> حذف کاربر</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            حذف کاربر
        </div>
        <div class="panel-body">
            <form method="post">
                <input type="hidden" name="UserId" value="@ViewData["UserId"].ToString()" />
                <dl class="dl-horizontal">
                    <dt>نام کاربری :</dt>
                    <dd>@Model.InformationUserViewModel.UserName</dd>
                    <dt>ایمیل : </dt>
                    <dd>@Model.InformationUserViewModel.Email</dd>
                    <dt>موجودی کیف پول : </dt>
                    <dd>@Model.InformationUserViewModel.Wallet</dd>
                    <dt>تاریخ عضویت : </dt>
                    <dd>@Model.InformationUserViewModel.RegisterDate</dd>
                    <br />
                    <br />
                    <dt>
                        <input type="submit" class="btn btn-danger" value="حذف کاربر" /></dt>
                    <dd></dd>
                </dl>
            </form>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>